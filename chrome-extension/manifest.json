{
  "manifest_version": 3,
  "name": "Reading Comprehension Assistant",
  "version": "1.0",
  "description": "Tests your understanding of web content using AI-generated questions",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 